#include <stdio.h>
#include <time.h>
#include <stdlib.h>

int main() {
    FILE *fp = fopen("sayi.txt", "w+");
    int i, dizi[100];
    int *ip = dizi;

    if (fp == NULL) {
        printf("Dosya acilamadÄ±!\n");
        return 1;
    }

    srand(time(0));

    for (i = 0; i < 100; i++) {
        dizi[i] = rand() % 100;
        
        if (!(dizi[i] & (1 << 5))) {
            printf("5. Biti 0 Olan: %d\n", *(ip + i));
        }
        
        fprintf(fp, "%d\n", dizi[i]);
    }

    fclose(fp);

    return 0;
}
